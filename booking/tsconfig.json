{
  "compilerOptions": {
    "target": "es6",              /* Specify ECMAScript target version */
    "module": "commonjs",         /* Specify module code generation */
    "outDir": "./dist",           /* Redirect output folder for compiled files */
    "rootDir": "./src",           /* Specify the root directory of your source code */
    "esModuleInterop": true,      /* Enables interoperability between CommonJS and ES Modules */
    "resolveJsonModule": true,   /* Allow importing JSON modules */
    "sourceMap": true,            /* Generate source maps for easier debugging */
    "declaration": true,         /* Generate declaration files (.d.ts) */
    "moduleResolution": "node",  /* Specify module resolution strategy */
    "experimentalDecorators": true, /* Enables experimental support for decorators */
    "emitDecoratorMetadata": true, /* Enables additional metadata for decorators */
    "strictPropertyInitialization": false, /* Disable strict checking for property initialization */
    "baseUrl": "src",
  },
  "include": ["src/**/*.ts"],    /* Specifies which files to include for compilation */
  "exclude": ["node_modules"]    /* Files and folders to exclude from compilation */
}  